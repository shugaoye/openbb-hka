/* pages/index/index.wxss */
.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  padding: 20rpx;
  background-color: #f5f5f5;
}

.header {
  text-align: center;
  padding: 60rpx 20rpx 40rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  display: block;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  margin-top: 10rpx;
  display: block;
}

.content {
  flex: 1;
  padding: 20rpx 0;
}

.feature-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.feature-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.feature-desc {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-bottom: 30rpx;
}

.feature-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 10rpx;
  font-size: 32rpx;
  background-color: #f0f0f0;
  color: #333;
  border: 1rpx solid #ddd;
}

.feature-btn.primary {
  background-color: #07c160;
  color: #fff;
  border: 1rpx solid #07c160;
}

.footer {
  text-align: center;
  padding: 40rpx 0 20rpx;
  color: #999;
  font-size: 24rpx;
}